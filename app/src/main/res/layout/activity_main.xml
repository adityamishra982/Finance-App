<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_wallet_24"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#407bff"
        android:text="WalletWise"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:textSize="24sp"
        />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/financeapplogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Control of Your Finances with Ease"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your trusted partner in financial success.With WalletWise, effortlessly track expenses, plan budgets,and achieve your financial goals with ease and elegance."
        android:textAlignment="center"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:id="@+id/getstartedbtn"
        app:cornerRadius="10dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#407bff"
        android:layout_marginTop="15dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        app:cornerRadius="10dp"
        android:textColor="#407bff"
        android:layout_marginTop="0dp"
        android:backgroundTint="#F0F8FF"
        android:layout_margin="15dp"/>
</LinearLayout>